<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.example.MainActivity"
    android:gravity="center">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/title"
    android:text="Win Big!"
    android:layout_centerVertical="true"
    android:textSize="30dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bet"
        android:text="Enter Bet:"
        android:textSize="25dp"
        android:layout_below="@id/money"/>
    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/bet"
        android:layout_below="@id/money"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:text="Roll IT"
        android:onClick="imagePressed"/>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bet">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Under"
            android:textSize="20dp"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Over"
            android:textSize="20dp"/>
    </RadioGroup>

<ImageView
    android:id="@+id/cards"
    android:layout_width="65dp"
    android:layout_height="87dp"
    android:clickable="true"
    android:onClick="imagePressed"
    android:src="@drawable/cardback" />

    <ImageView
        android:id="@+id/cards2"
        android:layout_width="65dp"
        android:layout_height="87dp"
        android:clickable="true"
        android:onClick="imagePressed"
        android:src="@drawable/cardback"
        android:layout_toRightOf="@id/cards"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/money"
        android:text="Points: 100"
        android:layout_below="@id/cards"
        android:textSize="30dp"/>

</RelativeLayout>
